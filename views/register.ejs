<% layout('layout') -%>
  <form class="form-horizontal" method="post">
	<fieldset>
		<legend>Register</legend>
		<div class="control-group">
			<label class="control-label" for="username">User</label>
			<div class="controls">
				<input type="text" class="input-xlarge" id="username" name="username" />
				<p class="help-block">Your account id, use for login and display.</p>
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="password">Password</label>
			<div class="controls">
				<input type="text" class="input-xlarge" id="password" name="password" />
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="password-repeat">Password confirm</label>
			<div class="controls">
				<input type="text" class="input-xlarge" id="password-repeat" name="password-repeat" />
			</div>
		</div>
		<div class="form-actions">
			<button type="submit" class="btn btn-primary">Register</button>
		</div>
	</fieldset>
</form>