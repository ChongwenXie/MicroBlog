<!DOCTYPE html>
<html>
  <head>
    <title><%= title %> - Microblog</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
	<link rel='stylesheet' href='/stylesheets/bootstrap.css' />
	<link rel='stylesheet' href='/stylesheets/bootstrap-responsive.css' />
  </head>
  <body>
    <div class="navbar navbar-fixed-up">
		<div class="navbar-inner">
			<div class="container">
				<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
					<span class="icon-bar" />
					<span class="icon-bar" />
					<span class="icon-bar" />
				</a>
				<a class="brand" href="/">Microblog</a>
				<div class="nav-collapse">
					<ul class="nav">
						<li <% if(title=="home"){ %>class="active"<% } %>><a href="/">home page</a></li>
						<% if(!user) { %>
							<li <% if(title=="login"){ %>class="active"<% } %>><a href="/login">log in</a></li>
						<% } %>
						<% if(user) { %>
							<li><a href="/">Welcome, <%= user.name %></a></li>
							<li><a href="/logoff">log off</a></li>
						<% } %>
						<li <% if(title=="register"){ %>class="active"<% } %>><a href="/register">new user</a></li>
					</ul>
				</div>
			</div>
		</div>
	</div>

	<div id="container" class="container">
		<%- body %>
		<hr />
		<footer>
			<p>Microblog</p>
		</footer>
	</div>
  </body>
  <script src="/javascript/jquery.js" />
  <script src="/javascript/bootstrap.js" />
</html>
